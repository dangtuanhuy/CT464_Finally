@model IEnumerable<TieuLuan.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Administrator.cshtml";
}

<h2 class="text-center">DANH MỤC TIN TỨC</h2>

<p>
    <a href="@Url.Action("Create", "News")" class="btn btn-info">
        Tạo Mới
    </a>
</p>
<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewTitles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsDetails)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.FirstName)
            </th>
            <th></th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NewTitles)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsDetails)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FirstName)
                </td>
                <td>
                    <a href="@Url.Action("UploadNews", "News", new { id = item.NewsId })" class="btn btn-success">
                        <i class="fa fa-bell"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Edit", "News", new { id = item.NewsId })" class="btn btn-success">
                        <i class="fa fa-flash"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Details", "News", new { id = item.NewsId })" class="btn btn-primary">
                        <i class="fa fa-list-alt"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Delete", "News", new { id = item.NewsId})" class="btn btn-danger">
                        <i class="fa fa-trash-o"></i>
                        <span>

                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>
